{
    "ts-node": {
        "files": true
    },
    "compilerOptions": {
        "module": "commonjs",
        "noImplicitAny": true,
        "target": "es2020",
        "outDir": "build",
        "declaration": true,
        "sourceMap": true,
        "allowJs": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "experimentalDecorators": true
    },
    "include": ["src/**/*.ts", "declarations/express.d.ts"],
    "exclude": ["docs", "test", "node_modules", "**/*.test.ts"]
}
